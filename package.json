{
  "name": "@trustvc/trustvc",
  "version": "1.0.0-alpha.6",
  "description": "TrustVC library",
  "main": "dist/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "npx vitest --run --test-timeout=15000",
    "lint": "tsc && npx eslint . --color --format=table --max-warnings=0",
    "build": "npm run clean && tsup",
    "clean": "rm -rf dist/",
    "precommit": "lint-staged",
    "prepare": "husky",
    "release": "semantic-release --parallel=1 --repositoryUrl=https://github.com/TrustVC/trustvc.git --verbose"
  },
  "keywords": [
    "trustvc"
  ],
  "author": "IMDA",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=18.17.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/index.js"
    }
  },
  "dependencies": {
    "@govtechsg/oa-verify": "9.3.0-beta.4",
    "@govtechsg/open-attestation": "6.10.0-beta.7",
    "@tradetrust-tt/token-registry": "^5.0.0-alpha",
    "@trustvc/w3c-context": "^1.0.0-alpha",
    "@trustvc/w3c-issuer": "^1.0.0-alpha",
    "@trustvc/w3c-vc": "^1.0.0-alpha",
    "did-resolver": "^4.1.0",
    "ethers": "^5.7.2",
    "js-sha3": "^0.9.3",
    "ts-chacha20": "^1.2.0",
    "web-did-resolver": "^2.0.27"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/config-nx-scopes": "^19.5.0",
    "@commitlint/prompt": "^19.3.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.2",
    "@types/conventional-commits-parser": "^5.0.0",
    "@types/lodash": "^4.17.10",
    "@types/node": "^18.17.0",
    "@vitest/coverage-v8": "^1.6.0",
    "cpy": "^11.1.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-table": "^7.32.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-promise": "^7.0.0",
    "execa": "^9.4.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.8",
    "prettier": "^3.3.2",
    "rimraf": "^5.0.10",
    "semantic-release": "^20.1.3",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.8.0",
    "vite-plugin-dts": "^3.9.1",
    "vitest": "^1.6.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/trustvc/trustvc.git"
  },
  "bugs": {
    "url": "https://github.com/trustvc/trustvc/issues"
  },
  "homepage": "https://github.com/trustvc/trustvc#readme",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "private": false
}
